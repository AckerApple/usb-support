{
  "moduleFileExtensions": [
    "js",
    "json",
    "node",
    "ts"
  ],
  "rootDir": "./src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "collectCoverageFrom": [
    "**/*.{ts,js,jsx}",
    "!**/*.spec.e2e.{ts,js,jsx}",
    "!**/_*.{ts,js,jsx}",
    "!**/node_modules/**",
    "!**/app/**",
    "!**/.history/**"
  ],
  "testEnvironment": "node",
  "setupFiles": []
}